<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ContentText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="ContentText.FixedSmall">
        <item name="android:textSize">@dimen/front_small_fixed</item>
    </style>
    <style name="AppBarText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/app_bar_text</item>
    </style>
    <style name="AppBarText.Huge">
        <item name="android:textSize">18sp</item>
    </style>


</resources>
