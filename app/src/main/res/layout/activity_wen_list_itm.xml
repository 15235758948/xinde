<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_hjh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:gravity="center_horizontal"
            android:text="画江湖之不良人江湖版"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/info_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/info_title"
            android:layout_alignBottom="@+id/info_title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:text="1234"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/image_tm"
            android:layout_width="20dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/liaotian1"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/info_tx"
            android:layout_toStartOf="@+id/info_tx" />
    </RelativeLayout>
</RelativeLayout>