<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relative_seehistory"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:gravity="center_horizontal"
            android:text="破产姐妹第五季"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上次观看到第22集   12:00"
            android:id="@+id/textView22"
            android:layout_below="@+id/info_title"
            android:layout_alignLeft="@+id/info_title"
            android:layout_alignStart="@+id/info_title"
            android:layout_marginTop="7dp" />
        <TextView
            android:id="@+id/info_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:text="今天"
            android:textSize="15dp"
            android:layout_alignBaseline="@+id/textView22"
            android:layout_alignBottom="@+id/textView22"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
