<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/user_background">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/user_background_chang" />

        <TextView
            android:textSize="20dp"
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="King—国王   LV.5"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/imageView"
            android:layout_marginEnd="81dp"
            android:layout_marginRight="81dp"
            android:layout_marginTop="36dp"
            app:srcCompat="@drawable/wangguan" />


        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/textView12"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/user_haoyou" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_marginBottom="13dp"
            android:layout_toEndOf="@+id/imageView12"
            android:layout_toRightOf="@+id/imageView12"
            android:text="123456"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView12"
            android:layout_alignRight="@+id/textView12"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginTop="24dp"
            android:paddingLeft="2dp"
            android:paddingRight="10dp"
            android:text="123456"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/textView15"
            android:layout_toLeftOf="@+id/textView15"
            android:layout_toStartOf="@+id/textView15"
            android:src="@drawable/user_wenzhang1" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignRight="@+id/imageView"
            android:layout_centerVertical="true"
            android:paddingLeft="2dp"
            android:paddingRight="10dp"
            android:paddingTop="13dp"
            android:text="123456"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/textView13"
            android:layout_marginBottom="2dp"
            android:layout_toLeftOf="@+id/textView13"
            android:layout_toStartOf="@+id/textView13"

            android:src="@drawable/user_jifen" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingTop="20dp"
            android:src="@drawable/user_lan" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:paddingTop="30dp"
            android:text="每日任务"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:id="@+id/textView2" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:layout_alignLeft="@+id/imageView11"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView11"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:src="@drawable/meirirenwu" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="70dp"
            android:layout_height="70dp"
           android:src="@drawable/diandao"
            android:layout_alignTop="@+id/textView12"
            android:layout_toRightOf="@+id/imageView6"
            android:layout_toEndOf="@+id/imageView6" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:src="@drawable/bb"
            android:id="@+id/imageView5"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView" />


    </RelativeLayout>

</LinearLayout>