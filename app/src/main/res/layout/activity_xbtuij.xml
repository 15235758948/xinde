<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_wz"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/shu"
        android:gravity="center_vertical"
        android:text="小编推荐"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_above="@+id/relayive_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="查看更多"
        android:textSize="20dp" />

    <RelativeLayout
        android:id="@+id/relayive_text"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/text_wz">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:scaleType="centerCrop"
            android:src="@drawable/page4" />


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <TextView
                android:id="@+id/text_bjgf"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="暴君官方发布"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/text_play"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="3242342"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/image_play"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:layout_toLeftOf="@+id/text_play"
                android:layout_toStartOf="@+id/text_play"
                android:src="@drawable/ic_center_play" />

            <TextView
                android:id="@+id/text_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/image_play"
                android:layout_toStartOf="@+id/image_play"
                android:gravity="center"
                android:text="222222"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/image_msg"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:layout_toLeftOf="@+id/text_text"
                android:layout_toStartOf="@+id/text_text"
                android:scaleType="centerCrop"
                android:src="@drawable/liaotian1" />

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>