<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/orange">

        <TextView
            android:id="@+id/info_denglu"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textColor="@drawable/selector_text_press_back" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/register_dltx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:src="@drawable/denglu_touxiang" />

    <EditText
        android:id="@+id/register_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/register_dltx"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/edit_bg"
        android:hint="请输入密码"
        android:padding="10dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/register_editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/register_editText"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/edit_bg"
        android:hint="请再次输入密码"
        android:padding="10dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/register_editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_editText2"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/edit_bg"
        android:hint="请输入手机号码"
        android:padding="10dp"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_editText3"
        android:orientation="horizontal"
        android:weightSum="2">

        <EditText
            android:id="@+id/editText4"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/register_editText3"
            android:layout_alignStart="@+id/register_editText3"
            android:layout_below="@+id/register_editText3"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edit_bg"
            android:hint="请输入验证码"
            android:padding="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="获取验证码"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:textColor="#ffffff"
            />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_editText3"
        android:layout_alignStart="@+id/register_editText3"
        android:layout_below="@+id/linearLayout"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="注册"
        android:background="@color/orange"
        android:textColor="#ffffff"
        android:textSize="20dp" />
</RelativeLayout>