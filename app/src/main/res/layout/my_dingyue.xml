<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#888888">
    <RelativeLayout
        android:id="@+id/relative_dingyue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/orange">

        <TextView
            android:id="@+id/info_dingyue"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="我的订阅"
            android:textColor="@drawable/selector_text_press_back"
            android:textSize="20dp" />
    </RelativeLayout>
    <View
        android:id="@+id/relative_view"
        android:layout_below="@+id/relative_dingyue"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <GridView
        android:scrollbars="none"
        android:id="@+id/list_dingyue"
        android:layout_below="@+id/relative_view"
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:numColumns="3"/>
</RelativeLayout>