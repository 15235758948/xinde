<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/orange">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="7dp" />

        <View
            android:id="@+id/view2"
            android:layout_width="5dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/image_gengduo"
            android:layout_toStartOf="@+id/image_gengduo" />

        <View
            android:id="@+id/view3"
            android:layout_width="5dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/image_xaizai"
            android:layout_toStartOf="@+id/image_xaizai" />

        <View
            android:id="@+id/view4"
            android:layout_width="5dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/image_chakan"
            android:layout_toStartOf="@+id/image_chakan" />

        <View
            android:id="@+id/view5"
            android:layout_width="10dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/image_ceshi3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:paddingBottom="8dp"
            android:src="@drawable/ceshi3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/image_xiaoxitx"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_xiaoxitx"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/view4"
            android:layout_toStartOf="@+id/view4" />

        <ImageView
            android:id="@+id/image_chakan"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/chakan"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/view3"
            android:layout_toStartOf="@+id/view3" />

        <ImageView
            android:id="@+id/image_xaizai"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/xaizai"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/view2"
            android:layout_toStartOf="@+id/view2" />

        <ImageView
            android:id="@+id/image_gengduo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/gengduo"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/view5"
            android:layout_toStartOf="@+id/view5" />
    </RelativeLayout>

</LinearLayout>