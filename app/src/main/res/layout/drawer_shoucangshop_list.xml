<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/test4" />
        <TextView
            android:id="@+id/text_rx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/list_image"
            android:drawableLeft="@drawable/goods_rexiao"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="画江湖之不良人解释道海股份的撒谎..."
            android:textSize="18dp" />

        <TextView
            android:id="@+id/text_price1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_rx"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="¥ 45"
            android:textColor="#FF6347"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_price1"
            android:layout_alignBottom="@+id/text_price1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:text="包邮"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_price2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="¥ 88"
            android:textColor="#808080"
            android:textSize="20dp"
            android:layout_below="@+id/text_rx"
            android:layout_toRightOf="@+id/text_price1"
            android:layout_toEndOf="@+id/text_price1"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp" />

    </RelativeLayout>

</RelativeLayout>