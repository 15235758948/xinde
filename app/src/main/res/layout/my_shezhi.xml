<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/orange">

                    <TextView
                        android:id="@+id/info_shezhi"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="我的设置"
                        android:textColor="@drawable/selector_text_press_back"
                        android:textSize="20dp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/gainsboro" />

                <TextView
                    android:id="@+id/shezhi_anquan"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/jiantou"
                    android:gravity="center_vertical"
                    android:text="账号安全"
                    android:textColor="@drawable/selector_text_press_color"
                    android:textSize="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gainsboro" />

                <TextView
                    android:id="@+id/shezhi_shezhi"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/jiantou"
                    android:gravity="center_vertical"
                    android:text="账号设置"
                    android:textColor="@drawable/selector_text_press_color"
                    android:textSize="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/gainsboro" />

                <TextView
                    android:id="@+id/shezhi_bofang"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/jiantou"
                    android:gravity="center_vertical"
                    android:text="账号设置"
                    android:textColor="@drawable/selector_text_press_color"
                    android:textSize="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/gainsboro" />

                <TextView
                    android:id="@+id/shezhi_xiaozi"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/jiantou"
                    android:gravity="center_vertical"
                    android:text="消息设置"
                    android:textColor="@drawable/selector_text_press_color"
                    android:textSize="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/gainsboro" />

                <TextView
                    android:id="@+id/shezhi_jiancha"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/jiantou"
                    android:gravity="center_vertical"
                    android:text="检查更新"
                    android:textColor="@drawable/selector_text_press_color"
                    android:textSize="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/gainsboro" />

                <TextView
                    android:id="@+id/shezhi_dianji"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/jiantou"
                    android:gravity="center_vertical"
                    android:text="点击清理缓存"
                    android:textColor="@drawable/selector_text_press_color"
                    android:textSize="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/gainsboro" />

                <TextView
                    android:id="@+id/shezhi_fankui"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/jiantou"
                    android:gravity="center_vertical"
                    android:text="问题反馈"
                    android:textColor="@drawable/selector_text_press_color"
                    android:textSize="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/gainsboro" />

                <Button
                    android:id="@+id/shezhi_tuichu"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/orange"
                    android:text="退出登录"
                    android:textColor="#ffffff"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>